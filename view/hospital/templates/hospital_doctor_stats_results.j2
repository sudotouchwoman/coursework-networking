{% extends "hospital_results.j2" %}
{% block results %}
<h1 id="fetched-message"><b>Patients assigned to {{ doctor }}</b></h1>
{% endblock %}
{% block options %}
{% if has_options %}
<table class="table fetched-rows">
    <tr>
        <td>&#x2116;</td>
        <td>Patient creditentials</td>
        <td>Initial diagnosis</td>
        <td>Outcome diagnosis</td>
    </tr>
    {% for row in options %}
    <tr>
    {% for column in  row%}    
        <td> {{ column }} </td>
    {% endfor %}
    </tr>
    {% endfor %}
</table>
{% endif %}
{% endblock %}
