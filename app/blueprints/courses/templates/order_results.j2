{% extends "courses_results.html" %}
{% block results %}
<h1 id="fetched-message"><b>Orders filtered by price ({{ threshold }})</b></h1>
{% endblock %}
{% block options %}
{% if empty %}
<div>
    <p style="text-align: center;">Nothing found for your request, try lowering the threshold value</p>
</div>
{% endif %}
{% if has_options %}
<table class="fetched-rows">
    <tr>
        <td>Order id</td>
        <td>Client</td>
        <td>Ordered on</td>
        <td>Total price (&#8381;)</td>
    </tr>
    {% for row in options %}
    <tr>
        <td> {{ row[0] }} </td>
        <td> {{ row[1] }} </td>
        <td> {{ row[2] }} </td>
        <td> {{ row[3] }} </td>
    </tr>
    {% endfor %}
</table>
{% endif %}
{% endblock %}
