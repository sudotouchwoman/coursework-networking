{% extends "hospital_results.j2" %}
{% block results %}
<h1 id="fetched-message"><b>Information about {{ department }} department</b></h1>
{% endblock %}
{% block options %}
{% if has_options %}
<table class="fetched-rows">
    <tr>
        <td>Department head</td>
        <td>Total space (capacity of chambers)</td>
    </tr>
    <tr>
    {% for row in options %}
        <td> {{ row }} </td>
    {% endfor %}
    </tr>
</table>
{% endif %}
{% endblock %}
